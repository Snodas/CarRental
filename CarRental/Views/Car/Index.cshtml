@model IEnumerable<CarRental.ViewModels.CarViewModel>

<h1>Car List</h1>

<div class="mb-3">
    <a asp-controller="Car" asp-action="Create" class="btn btn-primary">Create Car</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Year</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.MakeYear</td>
                <td>
                    @if (!string.IsNullOrEmpty(car.ImageUrl))
                    {
                        <img src="@car.ImageUrl" alt="@car.Brand @car.Model" style="width: 100px; height: auto;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a asp-controller="Car" asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteConfirmed" asp-route-id="@car.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this car?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
